{
  "rules": {
    "indent": [
      2,
      2,
      {"VariableDeclarator": { "var": 2, "let": 2, "const": 3}}
    ],
    "linebreak-style": [2, "unix"],
    "semi": [2, "always"],
    "comma-dangle": [2, "always-multiline"],
    "no-console": [0],
    "no-console-log/no-console-log": 2,
  },
  "env": {
    "es6": true,
    "browser": true,
    "node": true,
  },
  "extends": "eslint:recommended",
  "ecmaFeatures": {
    modules: true,
    "experimentalObjectRestSpread": true
  },
  "globals": {
    "require": true,
    "module": true,
    "Environment": true,
    "$": true,
    "__dirname": false,
    "process": false,
    "describe": false,
    "it": false,
  },
  "plugins": [
    "no-console-log",
  ],
}

